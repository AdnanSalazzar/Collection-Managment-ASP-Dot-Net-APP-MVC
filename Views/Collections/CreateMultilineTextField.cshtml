@model CollectionManagement.Models.Domain.ItemCustomField

@{
    ViewData["Title"] = "Add Multiline Text Field";
}

<h2>Add Multiline Text Field</h2>


<form asp-action="CreateMultilineTextField">
    <input type="hidden" name="collectionId" value="@ViewBag.CollectionId" />

    <div class="form-group">
        <label for="FieldName">Field Name</label>
        <input type="text" class="form-control" name="fieldName" />
        <span asp-validation-for="FieldName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Field" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.CollectionId" class="btn btn-secondary">Back to Collection</a>
</div>