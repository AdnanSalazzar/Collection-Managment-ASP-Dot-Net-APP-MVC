@model CollectionManagement.Models.Domain.ItemCustomField
@{
    ViewData["Title"] = "Create Date Field";
}

<h2>Create Date Field</h2>

<form asp-action="CreateDateField" method="post">
    <div class="form-group">
        <label asp-for="FieldName" class="control-label"></label>
        <input asp-for="FieldName" class="form-control" />
        <span asp-validation-for="FieldName" class="text-danger"></span>
    </div>
    <input type="hidden" name="collectionId" value="@ViewBag.CollectionId" />
    <button type="submit" class="btn btn-primary">Create Field</button>
    <a asp-action="SelectCustomFieldType" asp-route-collectionId="@ViewBag.CollectionId" class="btn btn-secondary">Back</a>
</form>
