@model CollectionManagement.Models.Domain.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            @if (Model.Tags != null && Model.Tags.Any())
            {
                @foreach (var itemTag in Model.Tags)
                {
                    @itemTag.Tag.Name <br />
                }
            }
            else
            {
                <span>No tags</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="hidden" asp-for="CollectionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Collections" asp-route-id="@Model.CollectionId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
